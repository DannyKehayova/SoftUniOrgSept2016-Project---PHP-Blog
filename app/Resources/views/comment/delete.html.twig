{% extends 'base.html.twig' %}

{% block main %}
    <div class="container body-content span=8 offset=2">
        <div class="well">
            <form class="form-horizontal" action="{{ path('comment_delete', {id: comment.id}) }}" method="POST">
                <fieldset>
                    <legend>Delete Comment</legend>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="comment_email">Author email</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" id="comment_email" placeholder="Author email"
                                   name="comment[email]" value="{{ comment.email }}" disabled>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="comment_authorname">Author name</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" id="comment_authorname" placeholder="Author name"
                                   name="comment[authorname]" value="{{ comment.authorname }}" disabled>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="comment_content">Content</label>
                        <div class="col-sm-6">
                        <textarea class="form-control" rows="6" id="comment_content"
                                  name="comment[content]" disabled>{{ comment.content }}</textarea>
                        </div>
                    </div>

                    {{ form_row(form._token) }}

                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <a class="btn btn-default" href="{{ path('article_view', {id: article.id}) }}">Cancel</a>
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
{% endblock %}

